<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style  type="com.totalchange.discodj.web.client.views.impl.MediaWidget.Style">
		.mediaItem {
			margin: 0.5em 0.5em 0 0.5em;
			padding: 0.5em;
			border: 1px solid #CCC;
			background-color: rgba(255, 255, 255, 0.5);
		}
		
		.disabled {
			color: #888;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<div ui:field="containerDiv" class="{style.mediaItem}">
			<ui:msg><g:InlineLabel ui:field="titleLabel" /> by <g:InlineLabel ui:field="artistLabel" /></ui:msg>
			<g:InlineLabel ui:field="alreadyPlayedLabel" visible="false">
				<ui:msg>(already played or already in the queue)</ui:msg>
			</g:InlineLabel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
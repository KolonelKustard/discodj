<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.google.gwt.media.client">
	<ui:style>
		.boundaryPanel {
			background-color: #000;
		}

		.fullscreen {
			width: 100%;
			height: 100%;
		}
	</ui:style>
	
	<g:AbsolutePanel styleName="{style.boundaryPanel}" width="100%" height="100%">
		<g:HTMLPanel>
			<m:Audio ui:field="audio" styleName="{style.fullscreen}" />
			<m:Video ui:field="video" styleName="{style.fullscreen}" />
		</g:HTMLPanel>
	</g:AbsolutePanel>
</ui:UiBinder>

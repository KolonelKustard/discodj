<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dj="urn:import:com.totalchange.discodj.web.client.views.impl">
	<ui:style>
		.searchTextBox {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 2.5em;
			padding: 0 1em;
		}
		
		.deleteIcon {
			position: absolute;
			top: 0;
			left: 0;
			width: 60%;
			height: 2.5em;
		}
		
		.deleteIcon span {
			position: absolute;
			display: block;
			top: 0.7em;
			right: 0.5em;
			width: 16px;
			height: 16px;
			background: url('http://cdn.sstatic.net/stackoverflow/img/sprites.png?v=4') 0 -690px;
			cursor: pointer;
		}
		
		.artistFacets {
			position: absolute;
			top: 2.5em;
			left: 0;
			width: 20%;
			height: literal("-moz-calc(50% - 2.5em)");
		    height: literal("-webkit-calc(50% - 2.5em)");
		    height: literal("calc(50% - 2.5em)");
		    overflow: auto;
		    background: url(images/artistsbg.png) repeat-x bottom;
		}
		
		.albumFacets {
			position: absolute;
			top: 50%;
			left: 0;
			width: 20%;
			height: 50%;
			overflow: auto;
			background: url(images/albumsbg.png) repeat-x top;
		}
		
		.facet {
			padding: 0.3em 0.5em;
		}
		
		.searchResults {
			position: absolute;
			top: 2.5em;
			left: 20%;
			width: 40%;
			height: literal("-moz-calc(100% - 2.5em)");
		    height: literal("-webkit-calc(100% - 2.5em)");
		    height: literal("calc(100% - 2.5em)");
		    overflow: auto;
		    background: url(images/searchresultsbg.png) repeat-y right;
		}

		.paging {
			padding: 0.5em;
		}
		
		.previousButton {
			float: left;
		}
		
		.pageLabel {
			text-align: center;
		}
		
		.nextButton {
			float: right;
		}
		
		.nowPlaying {
			position: absolute;
			top: 0;
			left: 60%;
			width: 40%;
			height: 3em;
			background: url(images/playlistbg.png) repeat-y left
		}
		
		.playlist {
			position: absolute;
			top: 2.5em;
			left: 60%;
			width: 40%;
			height: literal("-moz-calc(100% - 2.5em)");
		    height: literal("-webkit-calc(100% - 2.5em)");
		    height: literal("calc(100% - 2.5em)");
		    overflow: auto;
		    background: url(images/playlistbg.png) repeat-y left;
		}
	</ui:style>
	
	<g:AbsolutePanel ui:field="boundaryPanel" width="100%" height="100%">
		<g:HTMLPanel>
			<span class="{style.deleteIcon}">
				<g:TextBox ui:field="searchTextBox" addStyleNames="{style.searchTextBox}" />
				<span></span>
			</span>
			<div class="{style.artistFacets}">
				<dj:FacetsWidget ui:field="artistFacets" />
			</div>
			<div class="{style.albumFacets}">
				<dj:FacetsWidget ui:field="albumFacets" />
			</div>
			<div class="{style.searchResults}">
				<g:VerticalPanel ui:field="resultsPanel" width="100%" />
				<div class="{style.paging}">
					<g:Button ui:field="previousButton" addStyleNames="{style.previousButton}">&lt;&lt;</g:Button>
					<g:Button ui:field="nextButton" addStyleNames="{style.nextButton}">&gt;&gt;</g:Button>
					<g:Label ui:field="pageLabel" addStyleNames="{style.pageLabel}">Page 1 of 1</g:Label>
				</div>
			</div>
			<div class="{style.nowPlaying}">
				<g:Label ui:field="nowPlayingLabel" />
			</div>
			<div class="{style.playlist}">
				<g:VerticalPanel ui:field="playlistPanel" width="100%" />
			</div>
		</g:HTMLPanel>
	</g:AbsolutePanel>
</ui:UiBinder>

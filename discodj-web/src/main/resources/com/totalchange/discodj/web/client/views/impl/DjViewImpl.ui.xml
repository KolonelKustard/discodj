<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dj="urn:import:com.totalchange.discodj.web.client.views.impl">
	<ui:style>
		.searchTextBox {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 2.5em;
			padding: 0 1em;
		}
		
		.deleteIcon {
			position: absolute;
			top: 0;
			left: 0;
			width: 60%;
			height: 2.5em;
		}
		
		.deleteIcon span {
			position: absolute;
			display: block;
			top: 0.7em;
			right: 0.5em;
			width: 16px;
			height: 16px;
			background: url('http://cdn.sstatic.net/stackoverflow/img/sprites.png?v=4') 0 -690px;
			cursor: pointer;
		}
		
		.artistFacets {
			position: absolute;
			top: 2.5em;
			left: 0;
			width: 20%;
			height: literal("-moz-calc(50% - 2.5em)");
		    height: literal("-webkit-calc(50% - 2.5em)");
		    height: literal("calc(50% - 2.5em)");
		    overflow: auto;
		    background: url(images/artistsbg.png) repeat-x bottom;
		}
		
		.albumFacets {
			position: absolute;
			top: 50%;
			left: 0;
			width: 20%;
			height: 50%;
			overflow: auto;
			background: url(images/albumsbg.png) repeat-x top;
		}
		
		.facet {
			padding: 0.3em 0.5em;
		}
		
		.searchResults {
			position: absolute;
			top: 2.5em;
			left: 20%;
			width: 40%;
			height: literal("-moz-calc(100% - 2.5em)");
		    height: literal("-webkit-calc(100% - 2.5em)");
		    height: literal("calc(100% - 2.5em)");
		    overflow: auto;
		    background: url(images/searchresultsbg.png) repeat-y right;
		}

		.paging {
			padding: 0.5em;
		}
		
		.previousButton {
			float: left;
		}
		
		.pageLabel {
			text-align: center;
		}
		
		.nextButton {
			float: right;
		}
		
		.nowPlaying {
			position: absolute;
			top: 0;
			left: 60%;
			width: 40%;
			height: 3em;
			background: url(images/playlistbg.png) repeat-y left
		}
		
		.nowPlaying div {
			margin: 0.1em 0.5em 0 0.5em;
			padding: 0.4em 0.5em;
			border: 1px solid #CCC;
			background-color: rgba(255, 255, 255, 0.5);
			color: #888;
		}
		
		.playlist {
			position: absolute;
			top: 2.5em;
			left: 60%;
			width: 40%;
			height: literal("-moz-calc(100% - 2.5em)");
		    height: literal("-webkit-calc(100% - 2.5em)");
		    height: literal("calc(100% - 2.5em)");
		    overflow: auto;
		    background: url(images/playlistbg.png) repeat-y left;
		}
		
		.playlistPanel {
			padding-bottom: 4em;
		}
	</ui:style>
	
	<g:AbsolutePanel ui:field="boundaryPanel" width="100%" height="100%">
		<g:HTMLPanel>
			<span class="{style.deleteIcon}">
				<dj:SearchTextBox ui:field="searchTextBox" addStyleNames="{style.searchTextBox}" placeholder="Type in here to search for a song">
					<ui:attribute name="placeholder" />
				</dj:SearchTextBox>
				<g:InlineLabel ui:field="clearSearchButton" />
			</span>
			<div class="{style.artistFacets}">
				<dj:FacetsWidget ui:field="artistFacets" />
			</div>
			<div class="{style.albumFacets}">
				<dj:FacetsWidget ui:field="albumFacets" />
			</div>
			<div class="{style.searchResults}">
				<g:VerticalPanel ui:field="resultsPanel" width="100%" />
				<g:HTMLPanel ui:field="pagingPanel" styleName="{style.paging}" visible="false">
					<g:Button ui:field="previousButton" addStyleNames="{style.previousButton}">&lt;&lt;</g:Button>
					<g:Button ui:field="nextButton" addStyleNames="{style.nextButton}">&gt;&gt;</g:Button>
					<div class="{style.pageLabel}">
						Page <g:InlineLabel ui:field="pageNumLabel" /> of <g:InlineLabel ui:field="totalPagesLabel" />
					</div>
				</g:HTMLPanel>
			</div>
			<div class="{style.nowPlaying}">
				<g:HTMLPanel ui:field="nowPlaying" visible="false">
					<ui:msg>
						Now Playing:
						<g:InlineLabel ui:field="nowPlayingTitleLabel" />
						by
						<g:InlineLabel ui:field="nowPlayingArtistLabel" />
					</ui:msg>
				</g:HTMLPanel>
				<g:HTMLPanel ui:field="nothingPlaying">
					<ui:msg>Now Playing: Nada</ui:msg>
				</g:HTMLPanel>
			</div>
			<div class="{style.playlist}">
				<g:AbsolutePanel ui:field="dropZone" width="100%" height="100%">
					<g:ScrollPanel width="100%" height="100%">
						<g:VerticalPanel ui:field="playlistPanel" width="100%" styleName="{style.playlistPanel}" />
					</g:ScrollPanel>
				</g:AbsolutePanel>
			</div>
		</g:HTMLPanel>
	</g:AbsolutePanel>
</ui:UiBinder>

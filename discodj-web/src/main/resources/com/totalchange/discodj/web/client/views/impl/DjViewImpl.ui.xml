<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dj="urn:import:com.totalchange.discodj.web.client.views.impl">
	<ui:style>
		.container {
			border: 1px solid #000;
		}
		
		.column {
			width: 33%;
			height: 100%;
			position: absolute;
			top: 0;
			border: 1px solid #F00;
		}
		
		.searchColumn {
			left: 0;
		}
		
		.resultsColumn {
			left: 33%;
			width: 34%;
		}
		
		.playlistColumn {
			left: 67%;
		}
		
		.playlistPanel {
			padding-bottom: 2em;
		}
		
		.header {
			margin: 0;
			padding: 1em;
			border: 1px solid #0F0;
		}
		
		.searchTextBox {
			width: 98%;
		}
		
		.facetsContainer {
			height: 22%;
			border: 1px solid #0F0;
		}
		
		.paging {
			width: 100%;
			position: absolute;
			bottom: 0;
			border: 1px solid #0F0;
		}
		
		.previousButton {
			position: absolute;
			left: 0;
		}
		
		.nextButton {
			position: absolute;
			right: 0;
			top: 0;
		}
		
		.pageLabel {
			text-align: center;
		}
		
		.nowPlaying {
			width: 100%;
			position: absolute;
			bottom: 0;
			border: 1px solid #0F0;
		}
	</ui:style>
	
	<g:AbsolutePanel ui:field="boundaryPanel" width="100%" height="100%">
		<g:HTMLPanel>
			<div class="{style.column} {style.searchColumn}">
				<h2 class="{style.header}">Search</h2>
				<g:TextBox ui:field="searchTextBox" addStyleNames="{style.searchTextBox}" />
				<div class="{style.facetsContainer}">
					<dj:FacetsWidget ui:field="artistFacets" title="Artists" />
				</div>
				<div class="{style.facetsContainer}">
					<dj:FacetsWidget ui:field="albumFacets" title="Albums" />
				</div>
				<div class="{style.facetsContainer}">
					<dj:FacetsWidget ui:field="genreFacets" title="Genres" />
				</div>
				<div class="{style.facetsContainer}">
					<dj:FacetsWidget ui:field="decadeFacets" title="Decades" />
				</div>
			</div>
			<div class="{style.column} {style.resultsColumn}">
				<h2 class="{style.header}">Results</h2>
				<g:VerticalPanel ui:field="resultsPanel" width="100%" />
				<div class="{style.paging}">
					<g:Button ui:field="previousButton" addStyleNames="{style.previousButton}">&lt;&lt;</g:Button>
					<g:Label ui:field="pageLabel" addStyleNames="{style.pageLabel}">Page 1 of 1</g:Label>
					<g:Button ui:field="nextButton" addStyleNames="{style.nextButton}">&gt;&gt;</g:Button>
				</div>
			</div>
			<div class="{style.column} {style.playlistColumn}">
				<h2 class="{style.header}">Playlist</h2>
				<g:VerticalPanel ui:field="playlistPanel" width="100%" styleName="{style.playlistPanel}" />
				<div class="{style.nowPlaying}">
					<h3>Now Playing:</h3>
					<g:Label ui:field="nowPlayingLabel" />
				</div>
			</div>
		</g:HTMLPanel>
	</g:AbsolutePanel>
</ui:UiBinder>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:dj="urn:import:com.totalchange.discodj.web.client.views.impl">
  <ui:style>
  </ui:style>

  <g:HTMLPanel>
    <div class="container">
      <ul class="nav nav-pills nav-justified">
        <li class="active"><a href="#search" data-toggle="tab">Search</a></li>
        <li><a href="#playlist" data-toggle="tab">PlayList</a></li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane active" id="search">
          <form role="form">
            <div class="form-group">
              <label for="searchInput" class="sr-only">Keywords</label>
              <dj:SearchTextBox ui:field="searchTextBox" placeholder="Type in here to search for a song">
                <ui:attribute name="placeholder" />
              </dj:SearchTextBox>
            </div>
          </form>

          <div class="panel-group" id="accordion">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapseArtists">
                    Artists
                  </a>
                </h3>
              </div>
              <div id="collapseArtists" class="panel-body collapse">
                <form class="form-horizontal" role="form">
                  <dj:FacetsWidget ui:field="artistFacets" />
                </form>
              </div>
            </div>

            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapseAlbums">
                    Albums
                  </a>
                </h3>
              </div>
              <div id="collapseAlbums" class="panel-body collapse">
                <form class="form-horizontal" role="form">
                  <dj:FacetsWidget ui:field="albumFacets" />
                </form>
              </div>
            </div>
          </div>

          <g:VerticalPanel ui:field="resultsPanel" />
          <g:HTMLPanel ui:field="pagingPanel" visible="false">
            <ul class="pager">
              <li class="previous"><g:Button ui:field="previousButton">← Previous</g:Button></li>
              <li class="next"><g:Button ui:field="nextButton">Next →</g:Button></li>
              Page <g:InlineLabel ui:field="pageNumLabel" /> of <g:InlineLabel ui:field="totalPagesLabel" />
            </ul>
          </g:HTMLPanel>
        </div>

        <div class="tab-pane" id="playlist">
          <div class="well">
            <g:HTMLPanel ui:field="nowPlaying" visible="false">
              <ui:msg>
                Now Playing:
                <g:InlineLabel ui:field="nowPlayingTitleLabel" />
                by
                <g:InlineLabel ui:field="nowPlayingArtistLabel" />
              </ui:msg>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="nothingPlaying">
              <ui:msg>Now Playing: Nada</ui:msg>
            </g:HTMLPanel>
          </div>

          <g:VerticalPanel ui:field="playlistPanel" width="100%" />
        </div>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>

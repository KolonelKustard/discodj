<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.container {
			border: 1px solid #000;
		}
	</ui:style>
	
	<g:AbsolutePanel ui:field="boundaryPanel" width="100%" height="100%">
		<g:HorizontalPanel width="100%" height="100%" addStyleNames="{style.container}">
			<g:cell width="33%">
				<g:VerticalPanel width="100%">
					<g:Label>Search</g:Label>
					<g:TextBox ui:field="searchText" />
					<g:VerticalPanel ui:field="searchPanel" width="100% "/>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="34%">
				<g:VerticalPanel width="100%">
					<g:Label>Results</g:Label>
					<g:VerticalPanel ui:field="resultsPanel" width="100%" />
					<g:DockLayoutPanel>
						<g:west size="20">
							<g:Button text="&lt;&lt;"/>
						</g:west>
						<g:center>
							<g:Label>Page 1 of 1</g:Label>
						</g:center>
						<g:east size="20">
							<g:Button text="&gt;&gt;" />
						</g:east>
					</g:DockLayoutPanel>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="33%">
				<g:VerticalPanel width="100%">
					<g:Label>Playlist</g:Label>
					<g:VerticalPanel ui:field="playlistPanel" width="100%" />
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:AbsolutePanel>
</ui:UiBinder>